<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SistemaHorario.Views.EliminarActividadView"
             Title="EliminarActividadView">
    
    <Grid RowDefinitions=".7*,.3*" ColumnDefinitions=".5*,.5*">
        <Label Text="¿Estás seguro de eliminar la actividad seleccionada?" VerticalOptions="Center" HorizontalTextAlignment="Center" Grid.Row="0" Grid.ColumnSpan="2">
        </Label>

        <Button VerticalOptions="Center" Grid.Row="1" Grid.Column="0" BackgroundColor="LightGreen" Command="{Binding EliminarActividadCommand}" Text="Confirmar" ></Button>
        <Button VerticalOptions="Center" Grid.Row="1" Grid.Column="1" BackgroundColor="PaleVioletRed"  Command="{Binding CancelarCommand}" Text="Cancelar" ></Button>
    </Grid>
</ContentPage>