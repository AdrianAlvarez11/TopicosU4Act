<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SistemaHorario.Views.HorarioView"
             xmlns:viewmodels="clr-namespace:SistemaHorario.Viewmodels"
             xmlns:views="clr-namespace:SistemaHorario.Views"
             x:DataType="viewmodels:HorarioViewmodel"   
             Shell.BackgroundColor="#006EC1"
             Shell.TitleColor="Black"
             
             Title="Horario semanal">


    <Grid RowDefinitions=".2*,*">
        <Picker Margin="20" Grid.Row="0" BackgroundColor="#006EC1" FontSize="Large" ItemsSource="{Binding ValoresDias}" SelectedItem="{Binding DiaSeleccionado}"></Picker>

        <CollectionView Margin="20" Grid.Row="1" ItemsSource="{Binding ActMostrables}">
            
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <views:ActividadMiniView></views:ActividadMiniView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            
        </CollectionView>
    </Grid>
</ContentPage>