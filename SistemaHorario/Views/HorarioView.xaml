<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SistemaHorario.Views.HorarioView"
             Shell.BackgroundColor="#006EC1"
             Shell.TitleColor="Black"
            
             Title="Horario semanal">


    <Grid RowDefinitions=".2*,*">
        <Picker Margin="20" Grid.Row="0" BackgroundColor="#B5E5F9" FontSize="Large"></Picker>

        <CollectionView Grid.Row="1" ItemsLayout="VerticalGrid">
            
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions=".3*,*">
                        <Label Grid.Column="0" Text="Hora"></Label>
                        <Label Grid.Column="1" Text="Calculo vectorial &#x0a; Dora Lilia Guadiana Medina &#x0a; B-2"></Label>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            
        </CollectionView>
    </Grid>
</ContentPage>