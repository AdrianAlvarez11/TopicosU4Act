<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SistemaHorario.Views.ActividadMiniView">
    
    <Border Padding="20" Stroke="Black" StrokeThickness="2">
        <Grid  ColumnDefinitions=".3*,*">
            <Border Stroke="Black" StrokeThickness="1" Grid.Column="0">
                <Label VerticalOptions="Center"  >
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="{Binding HoraInicio}"></Span>
                            <Span Text=":00 - "></Span>
                            <Span Text="{Binding HoraFinal}"></Span>
                            <Span Text=":00"></Span>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </Border>
            
            <Label  VerticalOptions="Center" HorizontalTextAlignment="Center" Grid.Column="1" Text="{Binding Detalles}"></Label>
        </Grid>
    </Border>
   
    
</ContentView>
