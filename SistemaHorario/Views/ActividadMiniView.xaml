<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SistemaHorario.Views.ActividadMiniView">
    
    <Border Padding="15" Stroke="Black" StrokeThickness="2">
        <Grid  ColumnDefinitions=".4*,*">
            <ScrollView>
                <Label Margin="10" VerticalOptions="Center"  >
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="{Binding HoraInicio}"></Span>
                            <Span Text=":00 - "></Span>
                            <Span Text="{Binding HoraFinal}"></Span>
                            <Span Text=":00"></Span>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </ScrollView>
               
         
            
            <Label Margin="10,0,0,0"  VerticalOptions="Center" HorizontalTextAlignment="Center" Grid.Column="1" Text="{Binding Detalles}"></Label>
        </Grid>
    </Border>
   
    
</ContentView>
